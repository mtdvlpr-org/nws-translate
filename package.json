    "nuxt": "^4.3.0",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "tailwindcss": "^4.1.18",
    "v-code-diff": "^1.13.1",
    "zod": "^4.3.6"
